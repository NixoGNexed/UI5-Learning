<mvc:View xmlns:widgets="sap.ui.integration.widgets"
    controllerName="com.myorg.ui5learning.controller.ListView"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page 
        id="page"
        title="{i18n>appTitle}"
        showNavButton="true"
        navButtonPress="onNavBack">
        <content>
            <List 
                class="sapUiResponsiveMargin"
                width="auto"
                headerText="{i18n>listViewListTitle}"
                items="{
                    path: 'characters>/'
                }" >
                <StandardListItem
                    icon="{characters>image}"
                    title="{characters>name}"
                    infoState="{= ${characters>alive} === true ? 'Information' : 'Error'}"
                    description="{characters>actor}"
                    info="{= ${characters>alive} === true ? 'Alive' : 'Dead'}"
                    type="Navigation"
                    press="onPressOpenDetails(${characters>})"/>
            </List>
        </content>
    </Page>
</mvc:View>
