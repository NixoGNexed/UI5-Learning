<mvc:View xmlns:widgets="sap.ui.integration.widgets"
    controllerName="com.myorg.ui5learning.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>appTitle}">
                    <headerContent>
                        <Button text="{i18n>mainViewButtonTheme}" icon="sap-icon://palette" press="onPressChangeTheme"></Button>
                    </headerContent>
                    <content>
                        <Panel headerText="{i18n>mainViewPanelIntroductionTitle}" width="auto" class="sapUiResponsiveMargin">
                            <content>
                                <FlexBox
                                    alignItems="Center"
                                    direction="Column">
                                    <Image src="./img/blue_ui5.svg" width="100px"></Image>
                                    <List 
                                        class="sapUiResponsiveMargin"
                                        items="{
                                            path: 'topics>/Topics'
                                        }" >
                                        <StandardListItem
                                            title="{topics>Name}"
                                            description="{topics>Description}"/>
                                    </List>
                                </FlexBox>
                            </content>
                        </Panel>
                        <Panel headerText="{i18n>mainViewPanelListTitle}" width="auto" class="sapUiResponsiveMargin">
                            <FlexBox 
                                height="auto"
                                alignItems="Center"
                                justifyContent="Center"
                                direction="Column">
                                <Image 
                                    src="./img/harrypotter.png"
                                    width="20vw"
                                    class="sapUiMediumMarginBottom"></Image>
                                <Button text="{i18n>mainViewButtonListNavigation}" width="200px" press="onPressNavigateToList" />
                            </FlexBox>
                        </Panel>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
